<odoo>
    <data>

        <!-- Tree -->
        <record id="view_estate_property_offer" model="ir.ui.view">
            <field name="name">estate_property_offer.tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date"/>
                    <field name="property_id"/>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="status"/>
                    <field name="validity"/>
                    <button name="action_accept" type="object" title="Accept" icon="fa-check"/>
                    <button name="action_refuse" type="object" title="Refuse" icon="fa-times"/>
                    <field name="date_deadline"/>
                </tree>
            </field>
        </record>

        <!-- Form -->
        <record id="view_estate_property_offer_form" model="ir.ui.view">
            <field name="name">estate_property_offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Estate Property Offer">
                    <sheet>
                        <group>
                            <field name="create_date"/>
                            <field name="property_id"/>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="date_deadline"/>
                            <field name="validity"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>

