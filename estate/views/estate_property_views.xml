<odoo>
    <data>

        <!-- Estate Property - Tree -->
        <record id="view_estate_property" model="ir.ui.view">
            <field name="name">estate_property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                </tree>
            </field>
        </record>


        <!--  Form -->
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate_property_form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Estate Property">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <group>
                                <field name="postcode"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="date_availability"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_orientation"/>
                                <field name="active"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <field name="description"/>
                                </page>
                                <page string="Other Info">
                                    <!--                                        <field name=""/>-->
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search -->
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate_property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <separator/>
                    <filter string="Available" name="inactive" domain="[('state', 'in', ['new','offer_received'])]"/>
                    <separator/>
                    <group expand="0" string="Group by">
                        <filter name='gb_postcode' string="Postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions-->
        <record id="estate_property_model_action" model="ir.actions.act_window">
            <field name="name">Estate Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="estate_property_type_model_action" model="ir.actions.act_window">
            <field name="name">Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="estate_property_menu_root" name="Estate">
            <menuitem id="estate_property_first_level_menu" name="Properties">
                <menuitem id="estate_property_model_menu_action" action="estate_property_model_action"/>
            </menuitem>
            <menuitem id="estate_property_type_first_level_menu" name="Settings">
                <menuitem id="estate_property_type_model_menu_action" action="estate_property_type_model_action"/>
            </menuitem>
        </menuitem>


    </data>
</odoo>

