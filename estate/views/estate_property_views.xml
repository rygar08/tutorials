<odoo>
    <data>

        <!-- Estate Property - Tree -->
        <record id="view_estate_property" model="ir.ui.view">
            <field name="name">estate_property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                </tree>
            </field>
        </record>


        <!--  Form -->
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate_property_form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Estate Property">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <group>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="postcode"/>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="date_availability"/>
                                <field name="state"/>
                                <field name="garden_area"/>
                                <field name="living_area"/>
                                <field name="total_area"/>
                            </group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_orientation"/>
                                <field name="active"/>
                                <field name="best_price"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <field name="description"/>
                                </page>
                                <page string="Offers">
                                    <field name="offer_ids"/>
                                </page>
                                <page string="Other Info">
                                    <group>
                                        <field name="buyer_id"/>
                                        <field name="seller_id"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search -->
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate_property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <separator/>
                    <filter string="Available" name="inactive" domain="[('state', 'in', ['new','offer_received'])]"/>
                    <separator/>
                    <group expand="0" string="Group by">
                        <filter name='gb_postcode' string="Postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>

